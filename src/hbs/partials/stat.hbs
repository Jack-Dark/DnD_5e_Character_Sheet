<div class="character--stat text-center" data-stat-type="{{lowercase stat}}">
	<label for="character--stat--{{stat}}">{{capitalize stat}}</label>
	<div class="character--stat__input-wrapper">
		<input class="character--stat__modifier {{lowercase stat}} text-center" type="text" disabled>
	</div>
	<div class="character--stat__input-wrapper">
		<input id="character--stat--{{stat}}" class="character--stat__value {{lowercase stat}} text-center" value="{{#if value}}{{value}}{{/if}}" type="number" min="0" max="30" onchange="{{>on-change-script}}">
	</div>
</div>